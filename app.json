{
  "expo": {
    "name": "RNProject",
    "slug": "RNProject",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/facebook.jpg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Facebook.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Cho phép $(PRODUCT_NAME) truy cập vào ảnh và video của bạn"
        }
      ]
    ]
  }
}
